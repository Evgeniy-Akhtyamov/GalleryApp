<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GalleryApp.Pages"
             x:Class="GalleryApp.Pages.ImagePage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="WhiteSmoke">
            <Image Source="{Binding OpenedPicture.Image}"
                VerticalOptions="FillAndExpand" 
                HorizontalOptions="FillAndExpand"/>
            <Label x:Name="dataLabel"  HorizontalOptions="Center" FontSize="Default"  Padding="30,10,30,10" TextColor="Black"/>            
        </StackLayout>        
    </ContentPage.Content>
</ContentPage>